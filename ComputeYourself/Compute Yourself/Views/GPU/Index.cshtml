@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ComputeYourself.Models.GPU.GPU>

@{
    ViewData["Title"] = "List of GPUs";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Brand)</th>
                    <th>@Html.DisplayNameFor(model => model.Warranty)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.VideoChipset)</th>
                    <th>@Html.DisplayNameFor(model => model.VramSize)</th>
                    <th>@Html.DisplayNameFor(model => model.VramType)</th>
                    <th>@Html.DisplayNameFor(model => model.RequiredPSU)</th>
                    <th>@Html.DisplayNameFor(model => model.Length)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Warranty)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.VideoChipset)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.VramSize)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.VramType)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.RequiredPSU)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"> Delete</i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_CreateItem", "GPU")