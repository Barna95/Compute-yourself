@using ComputeYourself.Data.Enums
@using ComputeYourself.Data.Enums.MotherBoard
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ComputeYourself.Models.PcCase.PcCase

@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>"Edit @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <select asp-for="Brand" class="form-control" asp-items="Html.GetEnumSelectList<ManuFacturerBrand>()"></select>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warranty" class="control-label"></label>
                        <input asp-for="Warranty" class="form-control" />
                        <span asp-validation-for="Warranty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SizeCompatibility" class="control-label"></label>
                        <select asp-for="SizeCompatibility" class="form-control" asp-items="Html.GetEnumSelectList<SizeStandard>()"></select>
                        <span asp-validation-for="SizeCompatibility" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxCpuCoolerHeight" class="control-label"></label>
                        <input asp-for="MaxCpuCoolerHeight" class="form-control" />
                        <span asp-validation-for="MaxCpuCoolerHeight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxGpuLength" class="control-label"></label>
                        <input asp-for="MaxGpuLength" class="form-control" />
                        <span asp-validation-for="MaxGpuLength" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:flex;justify-content:space-between;margin-top:10px">
                        <input type="submit" value="Update" class="btn btn-outline-success" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>