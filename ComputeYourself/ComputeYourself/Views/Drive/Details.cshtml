@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Drive

@{
    ViewData["Title"] = $"Details of {Model.Name}";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 id="hal">Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" readonly />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Warranty" class="control-label"></label>
                    <input asp-for="Warranty" class="form-control" readonly />
                    <span asp-validation-for="Warranty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" readonly />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConnectionType" class="control-label"></label>
                    <input asp-for="ConnectionType" class="form-control" readonly />
                    <span asp-validation-for="ConnectionType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" readonly />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxWrite" class="control-label"></label>
                    <input asp-for="MaxWrite" class="form-control" readonly />
                    <span asp-validation-for="MaxWrite" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxRead" class="control-label"></label>
                    <input asp-for="MaxRead" class="form-control" readonly />
                    <span asp-validation-for="MaxRead" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: flex; justify-content: space-between; margin-top: 10px">
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
