@using ComputeYourself.Data.Enums
@using ComputeYourself.Data.Enums.Drive
@using ComputeYourself.Data.Enums.MotherBoard
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Drive

@{
    ViewData["Title"] = "Add a new Drive";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 id="hal">Add a new Drive</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <select asp-for="Brand" class="form-control" asp-items="Html.GetEnumSelectList<ManuFacturerBrand>()"></select>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warranty" class="control-label"></label>
                        <input asp-for="Warranty" class="form-control" />
                        <span asp-validation-for="Warranty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConnectionType" class="control-label"></label>
                        <select asp-for="ConnectionType" class="form-control" asp-items="Html.GetEnumSelectList<ConnectionTypes>()"></select>
                        <span asp-validation-for="ConnectionType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacity" class="control-label"></label>
                        <input asp-for="Capacity" class="form-control" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxWrite" class="control-label"></label>
                        <input asp-for="MaxWrite" class="form-control" />
                        <span asp-validation-for="MaxWrite" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxRead" class="control-label"></label>
                        <input asp-for="MaxRead" class="form-control" />
                        <span asp-validation-for="MaxRead" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:flex;justify-content:space-between;margin-top:10px">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
