@using ComputeYourself.Data.Enums
@using ComputeYourself.Data.Enums.GPU
@using ComputeYourself.Data.Enums.MotherBoard
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RAM

@{
    ViewData["Title"] = "Add a new RAM";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new RAM</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <select asp-for="Brand" class="form-control" asp-items="Html.GetEnumSelectList<ManuFacturerBrand>()"></select>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Warranty" class="control-label"></label>
                        <input asp-for="Warranty" class="form-control" />
                        <span asp-validation-for="Warranty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Size" class="control-label"></label>
                        <input asp-for="Size" class="form-control" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MemoryType" class="control-label"></label>
                        <select asp-for="MemoryType" class="form-control" asp-items="Html.GetEnumSelectList<MemoryCompatibility>()"></select>
                        <span asp-validation-for="MemoryType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Frequency" class="control-label"></label>
                        <input asp-for="Frequency" class="form-control" />
                        <span asp-validation-for="Frequency" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Latency" class="control-label"></label>
                        <input asp-for="Latency" class="form-control" />
                        <span asp-validation-for="Latency" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <label asp-for="HeatSink" class="form-check-label"></label>
                        <input asp-for="HeatSink" class="form-check-input" type="checkbox" id="flexCheckDefault" />
                        <span asp-validation-for="HeatSink" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:flex;justify-content:space-between;margin-top:10px">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>