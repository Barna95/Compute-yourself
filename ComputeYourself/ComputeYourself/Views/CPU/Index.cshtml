@model IEnumerable<CPU>

@{
    ViewData["Title"] = "List of CPUs";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Brand)</th>
                    <th>@Html.DisplayNameFor(model => model.Warranty)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.Socket)</th>
                    <th>@Html.DisplayNameFor(model => model.ManufacturerCooler)</th>
                    <th>@Html.DisplayNameFor(model => model.L3Cache)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalCache)</th>
                    <th>@Html.DisplayNameFor(model => model.Cores)</th>
                    <th>@Html.DisplayNameFor(model => model.Threads)</th>
                    <th>@Html.DisplayNameFor(model => model.Igpu)</th>
                    <th>@Html.DisplayNameFor(model => model.TDP)</th>
                    <th>@Html.DisplayNameFor(model => model.CoreClock)</th>
                    <th>@Html.DisplayNameFor(model => model.TurboCoreClock)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Warranty)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Socket)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ManufacturerCooler)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.L3Cache)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TotalCache)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Cores)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Threads)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Igpu)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TDP)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CoreClock)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TurboCoreClock)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"> Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_CreateItem", "CPU")